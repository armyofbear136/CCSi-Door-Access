<!DOCTYPE html>
<html lang="en">

  <% var rootPath = './'; %>

<head>
  <%- include('./partials/head'); %>
</head>

<body class="dark-edition">
  <div class="wrapper ">
    <%- include('./partials/sidebar', {links: sidebar, logo: sideTitle}) %>
    <div class="main-panel">
      <%- include('./partials/navbar', {title: navTitle}) %>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-8">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Add User</h4>
                  <p class="card-category">Please fill out this information to add a new user</p>
                </div>
                <div class="card-body">
                  <div class="col-md-5">
                    <button type="submit" class="btn btn-primary" onclick="tryAdding()" value="Submit">Submit</button>
                    <a href="/org/<%= orgID %>/company/<%= companyID %>/site/<%= siteID %>/users"><button class="btn btn-primary">Cancel</button></a>
                  </div>
                </div>
                <div class="card-body">
                  <form id="addUserForm" method="post">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Fob Number</label>
                          <input type="text" class="form-control" name="fob">
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Employee ID</label>
                          <input type="text" class="form-control" name="eid">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">First Name</label>
                          <input type="text" class="form-control" name="fname">
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label class="bmd-label-floating">Last Name</label>
                          <input type="text" class="form-control" name="lname">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Email Address</label>
                          <input type="text" class="form-control" name="email">
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <h5>Groups</h5>
                    </div>
                    <div class="row">
                      <% groups.forEach(function(group) { %>
                        <div class="col-md-2">
                          <div class="form-group">
                            <div class="form-check">
                              <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" value="<%= group.id %>" name="groups">
                                <span class="form-check-sign">
                                  <span class="check"></span>
                                </span>
                                <%= group.name %>
                              </label>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                    </div>
                    <div class="clearfix"></div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <%- include('./partials/footer'); %>
    </div>
  </div>
  
  <%- include('./partials/foot'); %>
  <script>
    function tryAdding() {
      document.getElementById("addUserForm").submit();
    }
  </script>

</body>

</html>