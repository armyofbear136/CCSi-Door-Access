                            <% if (user.employee_id) { %>
                            <input type="text" class="form-control" id="eid" name="eid" value="<%= user.employee_id %>" placeholder="#####" disabled>
                            <% } else { %>
                            <input type="text" class="form-control" id="eid" name="eid" placeholder="#####" disabled>
                            <% } %>
                          </div>
                        </div>
                        <div class="col-md-3">
                          <div class="form-group">
                            <label for="email">Email Address</label>
                            <% if (user.email) {%>
                            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" placeholder="User@Email.com" disabled>
                            <% } else { %>
