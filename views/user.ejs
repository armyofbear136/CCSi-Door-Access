                            <% } else { %>
                            <input type="text" class="form-control" id="lname" name="lname" placeholder="Doe" disabled>
                            <% } %>
                          </div>
                        </div>
                        <div class="col-md-2">
                          <div class="form-group">
                            <label for="fob">Fob Number</label>
